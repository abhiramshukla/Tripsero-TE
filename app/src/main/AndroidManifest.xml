<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tripsero.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.ProfileActivity" />
        <activity android:name=".view.login.LandingPage" />
        <activity android:name=".view.login.LoginPage" />
        <activity android:name=".view.login.SignUp1" />
        <activity android:name=".view.login.SignUp2" />
        <activity android:name=".view.login.SignUp3" />
        <activity android:name=".view.login.VerifyOTP" />
        <activity android:name=".view.login.ChangePassword" />
        <activity android:name=".view.login.ResetPassword" />
        <activity android:name=".view.chat.messages.ChatLogActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.chat.messages.LatestTextMessageActivity" />
        </activity>
        <activity android:name=".view.chat.messages.NewMessageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.chat.messages.LatestTextMessageActivity" />
        </activity>
        <activity android:name=".view.chat.messages.LatestTextMessageActivity" />
        <activity android:name=".view.HomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>